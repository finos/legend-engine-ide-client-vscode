  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension"
      ],
      "name": "Launch Legend Extension",
      "outFiles": [
        "${workspaceFolder}/packages/extension/dist/**/*.js"
      ],
      "runtimeExecutable": "${execPath}",
      "request": "launch",
      "type": "extensionHost",
      "localRoot": "${workspaceFolder}/packages/extension"
    }
  ]
}
