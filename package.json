{
    "name": "legend-engine-ide-client-vscode",
    "version": "0.0.1",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/finos/legend-engine-ide-client-vscode/"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Legend Language Config",
            "properties": {}
        },
        "languages": [
            {
                "id": "legend",
                "extensions": [
                    ".pure"
                ]
            }
        ],
        "grammars": [
            {
                "language": "legend",
                "scopeName": "source.legend",
                "path": "./legend.tmlanguage"
            }
        ]
},
    "scripts": {
        "test": "jest",
        "compile": "tsc -b",
        "check:copyright": "node ./scripts/copyright/checkCopyrightHeaders.js"
    },
    "dependencies": {
        "@types/node": "20.8.4",
        "@types/vscode": "1.83.0",
        "path": "0.12.7",
        "typescript": "5.2.2",
        "vscode-languageclient": "9.0.1",
        "yo": "^4.3.1",
        "eslint": "8.52.0",
        "prettier": "3.0.3"
    },
    "main": "lib/extension",
    "activationEvents": [
        "onLanguage:legend",
        "workspaceContains:**/*.pure"
    ]
}
