{
  "name": "legend-engine-ide-client-vscode-root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/finos/legend-engine-ide-client-vscode.git"
  },
  "scripts": {
    "test": "cd packages/extension && yarn test",
    "compile": "yarn compile:shared && npm-run-all --parallel compile:client compile:extension",
    "compile:shared": "cd packages/shared && yarn compile",
    "compile:client": "cd packages/client && yarn compile",
    "compile:extension": "cd packages/extension && yarn compile",
    "dev:webpack": "cd packages/extension && yarn dev:webpack",
    "webpack": "cd packages/extension && yarn webpack",
    "webpack:package": "cd packages/extension && webpack:package",
    "build": "yarn compile && yarn webpack",
    "bundle": "yarn compile && yarn bundle:shared",
    "bundle:shared": "cd packages/shared && yarn bundle",
    "package": "yarn compile && yarn webpack:package",
    "check:copyright": "npm-run-all --parallel check:copyright:shared check:copyright:client check:copyright:extension",
    "check:copyright:shared": "cd packages/shared && yarn check:copyright",
    "check:copyright:client": "cd packages/client && yarn check:copyright",
    "check:copyright:extensino": "cd packages/extension && yarn check:copyright",
    "check:format": "prettier --list-different \"(scripts|docs)/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\" \"packages/**/src/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\"",
    "check:ci": "yarn check:format && yarn check:copyright",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:ci": "yarn lint:js --max-warnings=0 && yarn lint:style --max-warnings=0",
    "lint:js": "cross-env eslint --cache --cache-location ./build/.eslintcache --report-unused-disable-directives --parser-options=project:\"./tsconfig.json\" \"./packages/**/src/**/*.{js,ts,tsx}\"",
    "lint:style": "stylelint --cache --cache-location ./build/.stylelintcache \"style/**/*.{scss,css}\" \"packages/**/style/*.scss\"",
    "fix:format": "prettier --write \"(scripts|docs)/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\" \"packages/**/src/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\"",
    "mvn:prepare": "cd packages/extension && yarn mvn:prepare",
    "release:prepare": "yarn mvn:prepare && yarn bundle && vsce package -o legend-engine-ide-client-vscode.vsix",
    "release:marketPlace": "vsce publish -i legend-engine-ide-client-vscode.vsix",
    "release:openvsx": "ovsx publish -i legend-engine-ide-client-vscode.vsix"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5"
  },
  "packageManager": "yarn@4.6.0"
}
