{
  "name": "@finos/legend-engine-ide-client-vscode-shared",
  "version": "0.1.0",
  "description": "Legend Extension shared code",
  "homepage": "https://legend.finos.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/finos/legend-engine-ide-client-vscode.git"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/bundles/bundle.cjs.js"
    }
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "compile": "tsc -b --force",
    "dev": "npm run dev:ts",
    "dev:setup": "npm run release:prepare",
    "dev:ts": "tsc -b --watch",
    "build": "npm run compile",
    "bundle": "npm run clean && npm run build && rollup -c && echo '{\"type\": \"commonjs\"}' > lib/bundles/package.json",
    "clean": "rm -rf \"build\" && rm -rf \"lib\"",
    "check:copyright": "license-check-and-add check -f license-check-and-add-config.json",
    "check:format": "prettier --list-different \"(scripts|docs)/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\" \"src/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\"",
    "check:ci": "npm run check:format && npm run check:copyright",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:ci": "npm run lint:js --max-warnings=0 && npm run lint:style --max-warnings=0",
    "lint:js": "cross-env eslint --cache --cache-location ./build/.eslintcache --report-unused-disable-directives --parser-options=project:\"./tsconfig.json\" \"./src/**/*.{js,ts,tsx}\"",
    "lint:style": "stylelint --cache --cache-location ./build/.stylelintcache \"style/**/*.{scss,css}\" \"style/scss/**/*.scss\"",
    "fix:format": "prettier --write \"(scripts|docs)/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\" \"src/**/*.{md,json,mjs,cjs,js,ts,tsx,html,scss,css}\""
  },
  "dependencies": {
    "@finos/legend-vscode-extension-dependencies": "4.0.57",
    "@types/vscode": "1.83.0",
    "serializr": "3.0.3"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@eslint/compat": "^1.2.4",
    "@eslint/js": "9.17.0",
    "@finos/babel-preset-legend-studio": "2.0.84",
    "@finos/legend-dev-utils": "2.1.35",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "28.0.2",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.0",
    "@rollup/plugin-terser": "0.4.4",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "cross-env": "7.0.3",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.1",
    "license-check-and-add": "4.0.5",
    "postcss-url": "10.1.3",
    "prettier": "3.4.2",
    "rollup": "4.30.1",
    "rollup-plugin-flow": "1.1.1",
    "rollup-plugin-import-css": "3.5.8",
    "rollup-plugin-postcss": "4.0.2",
    "typescript": "5.7.2"
  },
  "overrides": {
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "extensions": {
    "applicationVSCodePlugin": "@finos/legend-application-vs-code-plugin-core"
  }
}
